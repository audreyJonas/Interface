#pragma once

#include "Modele.hpp"
#include "Demineur.h"
#include "VueG.hpp"

class Controleur {
private:
  Demineur *m;
  VueG *v;
  
public:
//etablit la connexion entre le modele et la vue 
//gestionnaire de signaux pour les boutons 

  Controleur(Demineur *mm, VueG *vv) : m(mm), v(vv) {
    v->addGridListener(this);
  }

  void on_gridBox_button(Glib::RefPtr<Mine>& c){
    //fonction qui lie le clique sur les boutons à la découverte d'une case
    m->jouer(c->get_ligne(), c->get_colonne());
	     //v->get_casesGrille().caseCourante.get_ligne(), v->casesGrille.caseCourante.get_colonne());
    //notifiterObservateur(statut);
  }


};
